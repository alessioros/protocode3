<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></li>
                <li><a href="#position" data-toggle="tab"><span class="glyphicon glyphicon-move" aria-hidden="true"></span></a></li>
                <li><a href="#dimension" data-toggle="tab"><span class="glyphicon glyphicon-resize-full" aria-hidden="true"></span></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade form-horizontal in active" id="home">
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    <div class="form-group">
                      <label class="col-sm-5" style="padding:8px 10px;text-align:right">Grid style</label>
                      <div class="col-sm-7">
                        <div class="btn-group btn-group-justified">
                            <label {{bind-attr class=":btn :btn-default :btn-sm simpleGrid:active"}}>
                                {{input type="checkbox" checked=simpleGrid class="hidden"}} Sim
                            </label>
                            <label {{bind-attr class=":btn :btn-default :btn-sm imageGrid:active"}}>
                                {{input type="checkbox" checked=imageGrid class="hidden"}} Img
                            </label>
                            <label {{bind-attr class=":btn :btn-default :btn-sm detailedGrid:active"}}>
                                {{input type="checkbox" checked=detailedGrid class="hidden"}} Det
                            </label>
                        </div>
                      </div>
                    </div>
                    {{input-select
                        label="Click listener"
                        content=controllers.viewControllers.model
                        optionLabelPath="content.name"
                        optionValuePath="content"
                        selection=navigationTarget
                        prompt="Navigate to:"}}
                    <br>
                    <p align="center"><b>Grid view cells</b></p>
                    <ul class="list-group" id="collapse-views">
                        {{#each item in gridViewCells}}
                        <li class="list-group-item">
                            {{#link-to "controlGridViewCell" item}}{{item.name}}{{/link-to}}
                        </li>
                        {{/each}}
                        {{#if isCreating}}
                        <li class="list-group-item">
                            <div class="input-group">
                                {{focus-input value=newNameGridViewCell class="form-control input-sm" insert-newline="createGridViewCell"}}
                                <span class="input-group-btn">
                                  <button type="button" class="btn btn-default btn-sm" {{action "createGridViewCell"}}>
                                      <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                                  </button>
                                  <button type="button" class="btn btn-default btn-sm" {{action "setCreating" false}}>
                                      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                  </button>
                                </span>
                            </div>
                        </li>
                        {{/if}}
                    </ul>
                    <button type="button" class="btn btn-default btn-block btn-sm" {{action "setCreating" true}}>
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add grid view cell
                    </button>
                </div>
                <div class="tab-pane fade form-horizontal" id="position">
                    <br>
                    <div class="form-group">
                      <label class="col-sm-5" style="padding:8px 10px;text-align:right">Align with parent</label>
                      <div class="col-sm-7">
                        <div class="btn-group btn-group-justified">
                            <label {{bind-attr class=":btn :btn-default :btn-sm alignParentTop:active"}}>
                                {{input type="checkbox" checked=alignParentTop class="hidden"}} <i class="fa fa-chevron-up"></i>
                            </label>
                            <label {{bind-attr class=":btn :btn-default :btn-sm alignParentBottom:active"}}>
                                {{input type="checkbox" checked=alignParentBottom class="hidden"}} <i class="fa fa-chevron-down"></i>
                            </label>
                        </div>
                      </div>
                    </div>
                    {{input-select label="Align with top" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=alignTop prompt="Select sibling"}}
                    {{input-select label="Align with bottom" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=alignBottom prompt="Select sibling"}}
                    {{input-select label="Above to" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=above prompt="Select sibling"}} {{input-select label="Below to" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=below prompt="Select sibling"}}
                    {{input-number label="Position Y" min="0" value=posY action='acceptChanges'}}
                </div>
                <div class="tab-pane fade form-horizontal" id="dimension">
                    <br>
                    {{input-number label="Height" min="205" value=height action='acceptChanges' }}
                </div>

            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "deleteUiPhoneControl"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
