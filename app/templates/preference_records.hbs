<div class='table-container'>
  <table class='table table-hover table-bordered'>
      <thead>
        <tr id='record_header'>
          <th class='col-md-1'>#</th>
          <th class='col-md-3'>Type</th>
          <th class='col-md-3'>Key</th>
          <th class='col-md-3'>Value</th>
          <th class='col-md-2'></th>
        </tr>
      </thead>
      <tbody>
        {{#each item in controller item-controller="PreferenceRecords" }}
        <tr class='record_row'>
          <th class='col-md-1'>{{_view.contentIndex}}</th>
          <th class='col-md-3'>{{item.type}}</th>
          <th class='col-md-3'>{{item.key}}</th>
          <th class='col-md-3'>{{item.value}}</th>
          <th class='col-md-2' id='rec_controls'>
            <button type="button" class="btn btn-default btn-sm" id='del_record_button' {{action "deletePRecord" item.key }}>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            </button>
          </th>
        </tr>
        {{/each}}
        {{#if isCreating}}
        <tr id='record_row'>
          <th class='col-md-1'>{{_view.contentIndex}}</th>
          <th class='col-md-3'>
            {{view Ember.Select
              content=types
              class="form-control input-sm"
              value=typePreferenceRecord
            }}
          </th>
          <th class='col-md-3'>{{focus-input value=keyPreferenceRecord class="form-control input-sm"}}</th>
          <th class='col-md-3'>
            {{#if isBooleanRec}}
              {{view Ember.Select
                content=booleanOptions
                class="form-control input-sm"
                value=valuePreferenceRecord
              }}
            {{else}}
              {{focus-input value=valuePreferenceRecord class="form-control input-sm"}}
            {{/if}}
          </th>
          <th class='col-md-2' id='rec_controls'>
          {{#if isKeyValid}}
              {{#if isValueValid}}
              <span class="input-group-btn">
                  <button type="button" class="btn btn-default btn-sm" {{action "createPrefRecord"}}>
                      <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                  </button>
                  <button type="button" class="btn btn-default btn-sm" {{action "setCreating" false}}>
                      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
              </span>
              {{else}}
               invalid value
              {{/if}}
          {{else}}
            invalid key
          {{/if}}
          </th>
        </tr>
        {{/if}}
        <tr>
          <th class='col-md-1'></th>
          <th class='col-md-3'></th>
          <th class='col-md-3'></th>
          <th class='col-md-3'></th>
          <th class='col-md-2' id='rec_controls'>
            <div class="btn-group">
              <button type="button" class="btn btn-default btn-sm" {{action "setCreating" true}}>
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              </button>
            </div>
          </th>
        </tr>
      </tbody>
  </table>
</div>
