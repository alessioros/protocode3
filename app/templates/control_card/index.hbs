<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></li>
                <li><a href="#position" data-toggle="tab"><span class="glyphicon glyphicon-move" aria-hidden="true"></span></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade form-horizontal in active" id="home">
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-text label="Title" maxlength=25 value=title action='acceptChanges'}}
                    {{input-text label="Subtitle" maxlength=50 value=subtitle action='acceptChanges'}}
                    <div class="form-group">
                      <label class="col-sm-5" style="padding:8px 10px;text-align:right">Align with parent</label>
                      <div class="col-sm-7">
                        <div class="btn-group btn-group-justified">
                            <label {{bind-attr class=":btn :btn-default :btn-sm oneAction:active"}}>
                                {{input type="checkbox" checked=oneAction class="hidden"}} 1
                            </label>
                            <label {{bind-attr class=":btn :btn-default :btn-sm twoActions:active"}}>
                                {{input type="checkbox" checked=twoActions class="hidden"}} 2
                            </label>
                            <label {{bind-attr class=":btn :btn-default :btn-sm threeActions:active"}}>
                                {{input type="checkbox" checked=threeActions class="hidden"}} 3
                            </label>
                        </div>
                      </div>
                    </div>
                </div>
                <div class="tab-pane fade form-horizontal" id="position">
                    <br>
                    <div class="form-group">
                      <label class="col-sm-5" style="padding:8px 10px;text-align:right">Align with parent</label>
                      <div class="col-sm-7">
                        <div class="btn-group btn-group-justified">
                            <label {{bind-attr class=":btn :btn-default :btn-sm alignParentTop:active"}}>
                                {{input type="checkbox" checked=alignParentTop class="hidden"}} <i class="fa fa-chevron-up"></i>
                            </label>
                        </div>
                      </div>
                    </div>
                    {{input-select label="Align with top" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=alignTop prompt="Select sibling"}}
                    {{input-select label="Align with bottom" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=alignBottom prompt="Select sibling"}}
                    {{input-select label="Above to" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=above prompt="Select sibling"}}
                    {{input-select label="Below to" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=below prompt="Select sibling"}}
                    {{input-number label="Position Y" min="0" value=posY action='acceptChanges'}}
                </div>
            </div>
        </div>
        <div class="panel-footer">
              <div class="btn-group">
                  <button type="button" class="btn btn-default btn-sm" {{action "deleteUiPhoneControl"}}>
                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  </button>
              </div>
          </div>
    </div>
</div>
