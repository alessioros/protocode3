<div class='col-md-12'>
  <div class='df_header'>
      <div class='df_title'>
        {{#if model}}
            Add entities/relationship to the DB
        {{else}}
            Enable a SQLite DB in your app
        {{/if}}
      </div>
      <div class='switch_button'>
        {{#if model}}
          {{#link-to 'entities'}}
            <button type="button" class="btn btn-info" id="edbutton" >
              Edit entities
              <i class="fa fa-pencil-square-o" id="but_icon" aria-hidden="true"></i>
            </button>
          {{/link-to}}
            <button type="button" class="btn btn-danger" {{action 'disableDB'}}>Delete SQLite</button>
        {{else}}
            <button type="button" class="btn btn-success" {{action 'enableDB'}}>Enable SQLite</button>
        {{/if}}
      </div>
  </div>
  <hr id='header_hr'>
  <div class='database_editor'>
    {{#if model}}
      {{outlet}}
    {{/if}}
  </div>
</div>
